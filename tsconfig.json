{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        // "typeRoots": ["node_modules/@types"],
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "lib": ["es2015"],
    "baseUrl": "src",
    "paths": {
        "@/*": ["*"],
        "@config": ["config"],
        "@interfaces/*": ["interfaces/*"],
        "@middlewares/*": ["middlewares/*"],
        "@models/*": ["models/*"],
        "@routes/*": ["routes/*"],
        "@services/*": ["services/*"],
    },
    "include": ["src/**/*.ts", "src/**/*.json", ".env"],
    "exclude": ["node_modules", "src/http"]
}